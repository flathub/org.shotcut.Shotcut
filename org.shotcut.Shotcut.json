{
    "app-id": "org.shotcut.Shotcut",
    "branch": "stable",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.9",
    "sdk": "org.kde.Sdk",
    "command": "shotcut",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--device=all",
        "--share=network",
        "--filesystem=host",
        "--socket=pulseaudio",
        "--env=FREI0R_PATH=/app/lib/frei0r-1",
        "--env=LADSPA_PATH=/app/lib/ladspa"
    ],
    "cleanup": [
        "/include",
        "/lib/cmake",
        "/lib/pkgconfig",
        "/share/man",
        "*.la"
    ],
    "modules": [
        {
            "name": "qtwebkit",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_INSTALL_LIBDIR=lib",
                "-DPORT=Qt",
                "-DENABLE_API_TESTS=OFF",
                "-DENABLE_INSPECTOR_UI=OFF",
                "-DENABLE_LEGACY_WEB_AUDIO=OFF",
                "-DENABLE_MEDIA_SOURCE=OFF",
                "-DENABLE_NETSCAPE_PLUGIN_API=OFF",
                "-DENABLE_PRINT_SUPPORT=OFF",
                "-DENABLE_SAMPLING_PROFILER=OFF",
                "-DENABLE_SPELLCHECK=OFF",
                "-DENABLE_VIDEO=OFF",
                "-DENABLE_WEBKIT2=OFF",
                "-DENABLE_WEB_AUDIO=OFF",
                "-DUSE_GSTREAMER=OFF"
            ],
            "post-install": [
                "mv /app/mkspecs /app/lib"
            ],
            "cleanup": [
                "/lib/mkspecs"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/annulen/webkit/releases/download/qtwebkit-5.212.0-alpha2/qtwebkit-5.212.0-alpha2.tar.xz",
                    "sha256": "f8f901de567e11fc5659402b6b827eac75505ff9c5072d8e919aa306003f8f8a"
                }
            ]
        },
        {
            "name": "x264",
            "config-opts": [
                "--disable-cli",
                "--enable-shared"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.videolan.org/x264/snapshots/x264-snapshot-20171223-2245-stable.tar.bz2",
                    "sha256": "ee4ba2c3d1caf786ad66d3fa86bdc368a8f827318788a62a9c8444b2c35816bf"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-ffserver",
                "--disable-doc",
                "--disable-alsa",
                "--enable-libfontconfig",
                "--enable-libfreetype",
                "--enable-libopus",
                "--enable-libpulse",
                "--enable-librsvg",
                "--enable-libvpx",
                "--enable-libxml2",
                "--enable-libx264"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-3.4.2.tar.xz",
                    "sha256": "2b92e9578ef8b3e49eeab229e69305f5f4cbc1fdaa22e927fc7fca18acccd740"
                }
            ]
        },
        {
            "name": "jack2",
            "buildsystem": "simple",
            "build-commands": [
                "./waf configure --prefix=/app --htmldir=/app/share/doc/jack/ --freebob=no --classic",
                "./waf build -j `nproc`",
                "./waf install"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/share",
                "/lib/jack",
                "/lib/libjackserver.so*",
                "/lib/pkgconfig"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/jackaudio/jack2/releases/download/v1.9.12/jack2-1.9.12.tar.gz",
                    "sha256": "deefe2f936dc32f59ad3cef7e37276c2035ef8a024ca92118f35c9a292272e33"
                }
            ]
        },
        {
            "name": "eigen",
            "buildsystem": "cmake-ninja",
            "builddir": true,
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://bitbucket.org/eigen/eigen/get/3.3.4.tar.bz2",
                    "sha256": "dd254beb0bafc695d0f62ae1a222ff85b52dbaa3a16f76e781dce22d0d20a4a6"
                }
            ]
        },
        {
            "name": "fftw",
            "buildsystem": "simple",
            "build-commands": [
                "./configure --prefix=/app --disable-doc --with-pic --enable-threads --enable-type-prefix",
                "make -j `nproc`",
                "make install",
                "make clean",
                "./configure --prefix=/app --disable-doc --with-pic --enable-threads --enable-type-prefix --enable-float",
                "make -j `nproc`",
                "make install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.fftw.org/fftw-3.3.7.tar.gz",
                    "sha256": "3b609b7feba5230e8f6dd8d245ddbefac324c5a6ae4186947670d9ac2cd25573"
                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "movit",
            "buildsystem": "simple",
            "build-commands": [
                "./autogen.sh --prefix=/app",
                "make -j `nproc` libmovit.la",
                "make install"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/ddennedy/movit.git",
                    "commit": "3e8b4ebb796bcbe7e9727a2d7f2d0ba8f0170dfa"
                }
            ]
        },
        {
            "name": "libsamplerate",
            "rm-configure": true,
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/share/doc"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.mega-nerd.com/SRC/libsamplerate-0.1.9.tar.gz",
                    "sha256": "0a7eb168e2f21353fb6d84da152e4512126f7dc48ccb0be80578c565413444c1"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi"
                    ]
                }
            ]
        },
        {
            "name": "sox",
            "config-opts": [
                "--disable-static"
            ],
            "cleanup": [
                "/bin"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://http.debian.net/debian/pool/main/s/sox/sox_14.4.2.orig.tar.bz2",
                    "sha256": "81a6956d4330e75b5827316e44ae381e6f1e8928003c6aa45896da9041ea149c"
                }
            ]
        },
        {
            "name": "vidstab",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/georgmartius/vid.stab/archive/v1.1.0.tar.gz",
                    "sha256": "14d2a053e56edad4f397be0cb3ef8eb1ec3150404ce99a426c4eb641861dc0bb"
                }
            ]
        },
        {
            "name": "frei0r-plugins",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://files.dyne.org/frei0r/frei0r-plugins-1.6.1.tar.gz",
                    "sha256": "e0c24630961195d9bd65aa8d43732469e8248e8918faa942cfb881769d11515e"
                }
            ]
        },
        {
            "name": "swh-plugins",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/swh/ladspa/archive/v0.4.17.tar.gz",
                    "sha256": "d1b090feec4c5e8f9605334b47faaad72db7cc18fe91d792b9161a9e3b821ce7"
                }
            ]
        },
        {
            "name": "ladspa",
            "buildsystem": "simple",
            "subdir": "src",
            "build-commands": [
                "make INSTALL_PLUGINS_DIR=/app/lib/ladspa/ INSTALL_INCLUDE_DIR=/app/include/ INSTALL_BINARY_DIR=/app/bin/ install"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.ladspa.org/download/ladspa_sdk_1.13.tgz",
                    "sha256": "b5ed3f4f253a0f6c1b7a1f4b8cf62376ca9f51d999650dd822650c43852d306b"
                }
            ]
        },
        {
            "name": "mlt",
            "config-opts": [
                "--enable-gpl",
                "--enable-gpl3",
                "--disable-gtk2"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mltframework/mlt.git",
                    "commit": "5afa66bd2495529204a088589a3b9eeeff4a3686"
                }
            ]
        },
        {
            "name": "webfx",
            "buildsystem": "qmake",
            "build-options": {
                "env": {
                    "QMAKEPATH": "/app/lib"
                }
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mltframework/webvfx.git",
                    "commit": "e918ce4667e623c3d60735cb898223e730c6d7af"
                }
            ]
        },
        {
            "name": "shotcut",
            "buildsystem": "qmake",
            "builddir": true,
            "build-options": {
                "env": {
                    "QMAKEPATH": "/app/lib"
                }
            },
            "config-opts": [
                "SHOTCUT_VERSION=18.05.08"
            ],
            "post-install": [
                "ln -sf /app/bin/melt /app/bin/qmelt",
                "install -Dm644 ../icons/shotcut-logo-64.png /app/share/icons/hicolor/64x64/apps/org.shotcut.Shotcut.png",
                "install -Dm644 ../snap/gui/shotcut.desktop /app/share/applications/org.shotcut.Shotcut.desktop",
                "desktop-file-edit --set-key=Icon --set-value='org.shotcut.Shotcut' /app/share/applications/org.shotcut.Shotcut.desktop",
                "mkdir -p /app/share/shotcut/translations",
                "lrelease ../src/src.pro",
                "install -Dm644 ../translations/*.qm /app/share/shotcut/translations",
                "install -Dm644 ../shotcut.appdata.xml /app/share/appdata/org.shotcut.Shotcut.appdata.xml",
                "sed -i 's|<id>shotcut.desktop</id>|<id>org.shotcut.Shotcut.desktop</id>|' /app/share/appdata/org.shotcut.Shotcut.appdata.xml",
                "sed -i '49i <releases><release date=\"2018-05-08\" version=\"18.05.08\"/></releases>' /app/share/appdata/org.shotcut.Shotcut.appdata.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/mltframework/shotcut/archive/v18.05.08.tar.gz",
                    "sha256": "a78ba95bc6fbb7de82ba2ac0ea65beb9a0b6e5bbcb48b5026f26399c6033272f"
                }
            ]
        }
    ]
}